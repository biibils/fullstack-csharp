@model WebAppMVC.Models.Product

@{
    ViewData["Title"] = "Product Detail";
}

<h2>Detail Produk</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Harga
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>
    </dl>
</div>