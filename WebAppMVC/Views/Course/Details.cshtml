@model WebAppMVC.Models.Course

@{
    ViewData["Title"] = "Detail Kursus";
}

<h2>Detail Kursus</h2>

<div>
    <h4>Informasi Kursus</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Nama</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Peserta</dt>
        <dd class="col-sm-10">@Model.Participant</dd>
    </dl>
</div>
<div>
    <h4>Daftar Peserta</h4>
    <hr />
    @if (Model.Students != null && Model.Students.Any())
    {
        <ul>
            @foreach (var s in Model.Students)
            {
                <li>@s.Name (@s.Email)</li>
            }
        </ul>
    }
    else
    {
        <p>Tidak ada peserta.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Manage" asp-route-id="@Model.Id" class="btn btn-info">Manage Peserta</a>
    <a asp-action="Index" class="btn btn-secondary">Kembali ke Daftar Kursus</a>
</div>